ARCHS = $(ARCHS_STANDARD)
SDKROOT = iphoneos
TARGETED_DEVICE_FAMILY = 1,2
IPHONEOS_DEPLOYMENT_TARGET = 5.1.1
CLANG_CXX_LANGUAGE_STANDARD = c++0x
CLANG_CXX_LIBRARY = libc++

CLANG_WARN_CONSTANT_CONVERSION = YES
CLANG_WARN_ENUM_CONVERSION = YES
CLANG_WARN_INT_CONVERSION = YES
CLANG_WARN__DUPLICATE_METHOD_MATCH = YES
GCC_WARN_ABOUT_RETURN_TYPE = YES
GCC_WARN_ABOUT_MISSING_PROTOTYPES = YES
GCC_WARN_UNINITIALIZED_AUTOS = YES
GCC_WARN_UNUSED_VARIABLE = YES

GCC_OBJC_CALL_CXX_CDTORS = YES
GCC_PRECOMPILE_PREFIX_HEADER = YES
GCC_DEBUGGING_SYMBOLS = full
DEAD_CODE_STRIPPING = YES

COMPRESS_PNG_FILES = NO
IPHONE_OPTIMIZE_OPTIONS = -skip-PNGs

//

CINDER_PATH = $(CINDER_PATH_CHR)

SPIDERMONKEY_SDK_PATH = $(SPIDERMONKEY_SDK_PATH_31)
SPIDERMONKEY_BLOCK_PATH = $(SPIDERMONKEY_SDK_PATH)/blocks/Spidermonkey31

ALWAYS_SEARCH_USER_PATHS = YES
USER_HEADER_SEARCH_PATHS = "$(CINDER_PATH)/boost" "$(CINDER_PATH)/blocks/new-chronotext-toolkit/src" "$(SPIDERMONKEY_SDK_PATH)/js/src"
HEADER_SEARCH_PATHS = ../include "$(CINDER_PATH)/include" "$(CINDER_PATH)/src/libtess2" "$(CINDER_PATH)/blocks/jsp/src" "$(SPIDERMONKEY_BLOCK_PATH)/ios/include" "$(SPIDERMONKEY_DIST_PATH)/include"

LIBRARY_SEARCH_PATHS = "$(SPIDERMONKEY_BLOCK_PATH)/ios/lib"
BASE_OTHER_LDFLAGS = -lz -ljs_static

BASE_GCC_PREPROCESSOR_DEFINITIONS = JS_POSIX_NSPR=1 JSGC_USE_EXACT_ROOTING=1 JSGC_GENERATIONAL=1 JSP_USE_PRIVATE_APIS=1

//

CODE_SIGN_IDENTITY = iPhone Developer
PROVISIONING_PROFILE =
