ARCHS = $(ARCHS_STANDARD_64_BIT)
SDKROOT = macosx
MACOSX_DEPLOYMENT_TARGET = 10.7
CLANG_CXX_LANGUAGE_STANDARD = c++0x
CLANG_CXX_LIBRARY = libc++

GCC_WARN_ABOUT_RETURN_TYPE = YES
GCC_WARN_UNUSED_VARIABLE = YES

GCC_OBJC_CALL_CXX_CDTORS = YES
GCC_PRECOMPILE_PREFIX_HEADER = YES
GCC_DEBUGGING_SYMBOLS = full
DEAD_CODE_STRIPPING = YES

//

CINDER_PATH = $(CINDER_PATH_CHR)

SPIDERMONKEY_SDK_PATH = $(SPIDERMONKEY_SDK_PATH_31)
SPIDERMONKEY_DIST_PATH = $(SPIDERMONKEY_SDK_PATH)/js/src/build-osx/dist

ALWAYS_SEARCH_USER_PATHS = YES
USER_HEADER_SEARCH_PATHS = "$(CINDER_PATH)/boost" "$(CINDER_PATH)/blocks/new-chronotext-toolkit/src" "$(SPIDERMONKEY_SDK_PATH)/js/src"
HEADER_SEARCH_PATHS = ../include "$(CINDER_PATH)/include" "$(CINDER_PATH)/src/libtess2" "$(CINDER_PATH)/blocks/jsp/src" "$(SPIDERMONKEY_DIST_PATH)/include"

LIBRARY_SEARCH_PATHS = "$(SPIDERMONKEY_DIST_PATH)/lib"
BASE_OTHER_LDFLAGS = -lz -ljs_static

BASE_GCC_PREPROCESSOR_DEFINITIONS = JS_POSIX_NSPR=1 JSGC_USE_EXACT_ROOTING=1 JSGC_GENERATIONAL=1 JSP_USE_PRIVATE_APIS=1

//

PRODUCT_NAME = JSTestBed1
INFOPLIST_FILE = Info.plist
GCC_PREFIX_HEADER = Prefix.pch
